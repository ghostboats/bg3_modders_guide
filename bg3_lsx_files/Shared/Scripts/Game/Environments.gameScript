EVENTS
	
EVENT BlizzardEnter
VARS
	CHARACTER:_Character
	CHARACTERTEMPLATE:_Temp	
ON 
	OnTriggerEnter(_Character,_,"BlizzardEnter")
ACTIONS
	IF "!c1&!c2"
		IsEqual(_Character,null)
		IsTagged(_Character, "GHOST")
	THEN
		AddStatusInfluence(_Character,CHILLED,20)
	ENDIF
	
EVENT BlizzardLeave
VARS
	CHARACTER:_Character
ON 
	OnTriggerLeave(_Character,_,"BlizzardLeave")
ACTIONS
	IF "!c1&!c2"
		IsEqual(_Character,null)
		IsTagged(_Character, "GHOST")
	THEN
		RemoveStatusInfluence(_Character,CHILLED,20)	
	ENDIF

