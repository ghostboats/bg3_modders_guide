EVENT WaterLeave
VARS
	CHARACTER:_Character
ON 
	OnTriggerLeave(_Character,_,"WaterEventOff")
ACTIONS
	IF "!c1&!c2"
		IsEqual(_Character,null)
		IsTagged(_Character, "GHOST")
	THEN
